<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient -->
    <item
        android:bottom="0dip"
        android:left="0dip"
        android:right="0dip"
        android:top="0dip">
        <shape>
            <solid android:color="#FEB333" />

            <gradient
                android:angle="315"
                android:endColor="#FEB333"
                android:startColor="#FE7D60" />

            <corners android:radius="25dp" />
        </shape>
    </item>

    <!-- White background-->
    <item
        android:bottom="2dip"
        android:left="2dip"
        android:right="2dip"
        android:top="2dip">
        <shape>
            <solid android:color="#fafafa" />
            <corners android:radius="25dp" />
        </shape>
    </item>

</layer-list>